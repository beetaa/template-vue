{
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
  "files": [
    "ts-shim.d.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true
  }
}